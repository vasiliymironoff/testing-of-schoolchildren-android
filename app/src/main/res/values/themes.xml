<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="android:textColorPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_800</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/light</item>
        <!-- Status bar color and navigationBarColor -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Toolbar        -->
        <item name="colorControlNormal">@color/light</item>
        <item name="colorAccent">@color/orange_800</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/orange_800</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/light</item>
    </style>
</resources>